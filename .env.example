# Supabase - Obtenha em https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# NextAuth v5 - Auth.js (trustHost: true detecta automaticamente a URL)
# Gere secret com: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
AUTH_SECRET=your_auth_secret_here_min_32_chars
NEXTAUTH_SECRET=your_auth_secret_here_min_32_chars

# Tracking IDs - Configure conforme suas campanhas
NEXT_PUBLIC_META_PIXEL_ID=seu_pixel_id_meta
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ADS_CONVERSION_ID=AW-XXXXXXXXX
NEXT_PUBLIC_GOOGLE_ADS_CONVERSION_LABEL=xxxxx

# Facebook Conversions API (CAPI) - OPCIONAL mas RECOMENDADO
# Se configurado, usa CAPI server-side em vez de Pixel browser (à prova de AdBlock)
# Como obter: https://business.facebook.com/settings/system-users
# 1. Criar System User no Business Manager
# 2. Gerar Access Token com permissões: ads_management, business_management
# 3. Usar MESMO Pixel ID acima (NEXT_PUBLIC_META_PIXEL_ID)
META_CAPI_ACCESS_TOKEN=seu_access_token_aqui

# Client ID - Identificador único do cliente (use "3scars" para 3S Cars)
NEXT_PUBLIC_CLIENT_ID=3scars
